<Window x:Class="ViolationManagement.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trang chủ - Violation App"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

     <DockPanel>

         <!-- Taskbar Menu -->
        <Grid DockPanel.Dock="Top" Background="#B71C1C" Height="45">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="🚦 Violation App"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       Grid.Column="0"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Margin="0,0,10,0">
                <Button Content="🏠 Trang chủ" Click="OpenHome" Style="{StaticResource NavButtonStyle}" />
                <Button Content="📄 Tra cứu vi phạm" Click="OpenLookup" Style="{StaticResource NavButtonStyle}" />
                <Button Content="📝 Đăng ký" Click="OpenRegister" Style="{StaticResource NavButtonStyle}" />
                <Button Content="🔐 Đăng nhập" Click="OpenLogin" Style="{StaticResource NavButtonStyle}" />
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer>
            <StackPanel Background="#F0F0F0" Margin="20">

                <!-- Banner -->
                <Border Height="200" Background="#90CAF9" CornerRadius="10" Margin="0,10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextAlignment="Center"/>
                        <TextBlock Text="Phản ánh vi phạm giao thông"
                                   FontSize="28"
                                   FontWeight="ExtraBold"
                                   Foreground="White"
                                   Margin="0,5,0,0"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Features -->
                <TextBlock Text="✨ Tính năng nổi bật" 
                           FontSize="20" FontWeight="SemiBold" 
                           Foreground="#0D47A1"
                           Margin="0,20,0,10"/>

                <StackPanel Orientation="Vertical" Background="White">
                    <TextBlock Text="✔️ Gửi phản ánh vi phạm kèm hình ảnh hoặc video." Margin="0,5" FontSize="14"/>
                    <TextBlock Text="✔️ Xem trạng thái xử lý phản ánh nhanh chóng." Margin="0,5" FontSize="14"/>
                    <TextBlock Text="✔️ Cảnh sát xác minh và gửi thông báo xử lý." Margin="0,5" FontSize="14"/>
                    <TextBlock Text="✔️ Người vi phạm có thể phản hồi và nộp phạt online." Margin="0,5" FontSize="14"/>
                </StackPanel>

                <!-- Footer -->
                <TextBlock Text="Phiên bản 1.0 - Violation App © 2024" 
                           FontSize="12" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center"
                           Margin="0,30,0,0"/>
            </StackPanel>
        </ScrollViewer>

    </DockPanel> 
</Window>
