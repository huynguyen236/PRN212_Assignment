<Window x:Class="ViolationManagement.Views.ReportDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViolationManagement.Views"
        mc:Ignorable="d"
        Title="ReportDetailWindow" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Chi tiết báo cáo vi phạm"
                       FontSize="22" FontWeight="Bold" Foreground="#D32F2F"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Loại vi phạm -->
            <TextBlock Text="Loại vi phạm:" FontWeight="SemiBold"/>
            <TextBlock x:Name="ViolationTypeText" Margin="0,0,0,10"/>

            <!-- Mô tả -->
            <TextBlock Text="Mô tả:" FontWeight="SemiBold"/>
            <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <!-- Biển số xe -->
            <TextBlock Text="Biển số xe:" FontWeight="SemiBold"/>
            <TextBlock x:Name="PlateNumberText" Margin="0,0,0,10"/>

            <!-- Địa điểm -->
            <TextBlock Text="Địa điểm:" FontWeight="SemiBold"/>
            <TextBlock x:Name="LocationText" Margin="0,0,0,10"/>

            <!-- Ngày báo cáo -->
            <TextBlock Text="Ngày báo cáo:" FontWeight="SemiBold"/>
            <TextBlock x:Name="ReportDateText" Margin="0,0,0,10"/>

            <!-- Ảnh minh họa -->
            <TextBlock Text="Ảnh minh họa:" FontWeight="SemiBold"/>
            <Image x:Name="ReportImage" Height="200" Margin="0,5,0,15" Stretch="Uniform" />

            <!-- Video minh họa -->
            <TextBlock Text="Video minh họa:" FontWeight="SemiBold"/>
            <MediaElement x:Name="ReportVideo" Height="250" LoadedBehavior="Manual" UnloadedBehavior="Stop"
                          Margin="0,5,0,15" Stretch="Uniform"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="▶ Phát" Click="PlayVideo" Margin="0,0,10,0"/>
                <Button Content="⏸ Dừng" Click="PauseVideo"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
