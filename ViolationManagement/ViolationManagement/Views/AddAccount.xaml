<Window x:Class="ViolationManagement.Views.AddAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViolationManagement.Views"
        mc:Ignorable="d"
        Title="Thêm tài khoản" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <!-- Main Content -->
    <ScrollViewer>
        <StackPanel Background="#F0F0F0" Margin="20">
            <Border Background="White" CornerRadius="10" Padding="30" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Thêm tài khoản"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#0D47A1"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                    <!-- CCCD -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Mã căn cước công dân:" FontWeight="SemiBold"/>
                        <TextBox x:Name="CCCDTextBox" Height="30" />
                    </StackPanel>

                    <!-- Họ và tên -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Họ và tên:" FontWeight="SemiBold"/>
                        <TextBox x:Name="FullNameTextBox" Height="30" />
                    </StackPanel>

                    <!-- Role -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Vai trò:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="RoleComboBox" Height="30" SelectionChanged="RoleComboBox_SelectionChanged">
                            <ComboBoxItem Content="Admin" />
                            <ComboBoxItem Content="Police" />
                            <ComboBoxItem Content="Citizen" />
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Giới tính -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Giới tính:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="GenderComboBox" Height="30" SelectionChanged="GenderComboBox_SelectionChanged">
                            <ComboBoxItem Content="Nam" />
                            <ComboBoxItem Content="Nữ" />
                            <ComboBoxItem Content="Khác" />
                        </ComboBox>
                    </StackPanel>

                    <!-- Địa chỉ -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Địa chỉ:" FontWeight="SemiBold"/>
                        <TextBox x:Name="AddressTextBox" Height="30" />
                    </StackPanel>

                    <!-- Số điện thoại -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Số điện thoại:" FontWeight="SemiBold"/>
                        <TextBox x:Name="PhoneTextBox" Height="30" />
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Email:" FontWeight="SemiBold"/>
                        <TextBox x:Name="EmailTextBox" Height="30" />
                    </StackPanel>

                    <!-- Nút đăng ký -->
                    <Button Content="Thêm tài khoản"
                        Background="#0D47A1"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="35"
                        Margin="0,20,0,0"
                        Click="Register_Click" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>
