<Window x:Class="ViolationManagement.Views.ViewProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hồ sơ cá nhân" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Thông tin người dùng -->
        <GroupBox Header="Thông Tin Cá Nhân" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Họ tên: " Width="120" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding FullName}" Width="400"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Căn cước: " Width="120" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding CitizenID}" Width="400" IsReadOnly="True"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Email: " Width="120" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Email}" Width="400" IsReadOnly="True"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Điện thoại: " Width="120" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Phone}" Width="400"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Địa chỉ: " Width="120" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Address}" Width="400"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Giới tính: " Width="120" VerticalAlignment="Center"/>
                    <ComboBox SelectedValue="{Binding Gender}" SelectedValuePath="Tag" Width="400">
                        <ComboBoxItem Tag="Nam" Content="Nam"/>
                        <ComboBoxItem Tag="Nữ" Content="Nữ"/>
                        <ComboBoxItem Tag="Khác" Content="Khác"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Danh sách xe -->
        <GroupBox Header="Danh Sách Phương Tiện" Grid.Row="1">
            <DataGrid ItemsSource="{Binding Vehicles}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Biển Số" Binding="{Binding PlateNumber}" Width="*"/>
                    <DataGridTextColumn Header="Hãng" Binding="{Binding Brand}" Width="*"/>
                    <DataGridTextColumn Header="Dòng Xe" Binding="{Binding Model}" Width="*"/>
                    <DataGridTextColumn Header="Năm Sản Xuất" Binding="{Binding ManufactureYear}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Nút chức năng -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="💾 Lưu" Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="🔙 Quay về" Width="100" Margin="5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
