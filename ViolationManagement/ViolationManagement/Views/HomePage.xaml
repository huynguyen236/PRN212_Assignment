<Window x:Class="ViolationManagement.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trang chủ - Violation App"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
      
        Loaded="Window_Loaded"
        Background="#F5F5F5">

    <DockPanel>

        <!-- Taskbar -->
        <Grid DockPanel.Dock="Top" Background="#B71C1C" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>



            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                <TextBlock Text="👮 Violation App" 

                           Foreground="White" 
                           FontWeight="Bold" 
                           FontSize="18"/>
            </StackPanel>


            <!-- Feature ComboBox (Center) -->
            <ComboBox x:Name="FeatureComboBox"
                      Grid.Column="1"
                      Width="200"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      SelectionChanged="FeatureComboBox_SelectionChanged"
                      FontSize="14"
                      Height="35">
            </ComboBox>

            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal" 
                        Grid.Column="2"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="0,0,20,0">
                <Button x:Name="btnHome" Content="🏠 Trang chủ" Click="OpenHome" Style="{StaticResource NavButtonStyle}" Margin="5,0"/>
                <Button x:Name="btnRegister" Content="📝 Đăng ký" Click="OpenRegister" Style="{StaticResource NavButtonStyle}" Margin="5,0"/>
                <Button x:Name="btnLogin" Content="🔐 Đăng nhập" Click="OpenLogin" Style="{StaticResource NavButtonStyle}" Margin="5,0"/>
                <Button x:Name="btnProfile" Content="🏠 Hồ sơ" Click="ViewProfile" Style="{StaticResource NavButtonStyle}" Margin="5,0"/>
                <Button x:Name="btnLogout" Content="🚪 Đăng xuất" Click="Logout" Style="{StaticResource NavButtonStyle}" Margin="5,0"/>

            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer>
            <StackPanel Margin="20">

                <!-- Welcome Section -->
                <Border Background="#0D47A1" CornerRadius="12" Padding="20" Margin="0,10" >
                    <StackPanel>
                        <TextBlock x:Name="WelcomeText"
                                   Foreground="White"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Role Panels -->
                <StackPanel Orientation="Vertical" Margin="0,10">
                    <StackPanel x:Name="AdminPanel" Visibility="Collapsed">
                        <Border Background="#FF7043" CornerRadius="10" Padding="10" Margin="0,5">
                            <TextBlock Text="🔧 Quản trị viên: Quản lý hệ thống" Foreground="White" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel x:Name="PolicePanel" Visibility="Collapsed">
                        <Border Background="#29B6F6" CornerRadius="10" Padding="10" Margin="0,5">
                            <TextBlock Text="👮 Cảnh sát: Xử lý vi phạm" Foreground="White" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>

                    <StackPanel x:Name="CitizenPanel" Visibility="Collapsed">
                        <Border Background="#66BB6A" CornerRadius="10" Padding="10" Margin="0,5">
                            <TextBlock Text="💼 Công dân: Gửi phản ánh, theo dõi vi phạm" Foreground="White" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Features Section -->
                <TextBlock Text="✨ Tính năng nổi bật" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="#0D47A1" 
                           Margin="0,20,0,10"/>

                <WrapPanel Orientation="Horizontal" ItemWidth="400" ItemHeight="80">
                    <Border Background="White" CornerRadius="10" Padding="10" Margin="5">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📷" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Gửi phản ánh vi phạm kèm hình ảnh/video." FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="10" Margin="5">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="🔍" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Xem trạng thái xử lý phản ánh." FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="10" Margin="5">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="👮" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Cảnh sát xác minh và gửi thông báo." FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="10" Padding="10" Margin="5">
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="💳" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Nộp phạt online dễ dàng." FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Footer -->
                <TextBlock Text="Phiên bản 1.0 - Violation App © 2024"
                           FontSize="12"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,30,0,0"/>
            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>