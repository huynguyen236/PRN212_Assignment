<Window x:Class="ViolationManagement.Views.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký - Violation App"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <DockPanel>

        <!-- Taskbar -->
        <Grid DockPanel.Dock="Top" Background="#B71C1C" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                <TextBlock Text="🚦 Violation App" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <Button Content="🏠 Trang chủ" Click="OpenHome" Style="{StaticResource NavButtonStyle}" />
                <Button Content="📄 Tra cứu" Click="OpenLookup" Style="{StaticResource NavButtonStyle}" />
                <Button x:Name="BtnRegister" Content="📝 Đăng ký" Click="OpenRegister" Style="{StaticResource NavButtonStyle}" />
                <Button x:Name="BtnLogin" Content="🔐 Đăng nhập" Click="OpenLogin" Style="{StaticResource NavButtonStyle}" />
                <Button x:Name="BtnLogout" Content="🚪 Đăng xuất" Click="Logout" Style="{StaticResource NavButtonStyle}" />
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer>
            <StackPanel Background="#F0F0F0" Margin="20">
                <Border Background="White" CornerRadius="10" Padding="30" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="📝 Đăng ký tài khoản"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#0D47A1"
                                   TextAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <!-- Email -->
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Email:" FontWeight="SemiBold"/>
                            <TextBox x:Name="EmailTextBox" Height="30" />
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Số điện thoại:" FontWeight="SemiBold"/>
                            <TextBox x:Name="PhoneTextBox" Height="30" />
                        </StackPanel>

                        <!-- Full Name -->
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Họ và tên:" FontWeight="SemiBold"/>
                            <TextBox x:Name="FullNameTextBox" Height="30" />
                        </StackPanel>

                        <!-- Password -->
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Mật khẩu:" FontWeight="SemiBold"/>
                            <PasswordBox x:Name="PasswordBox" Height="30" />
                        </StackPanel>

                        <!-- Confirm Password -->
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Xác nhận mật khẩu:" FontWeight="SemiBold"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" Height="30" />
                        </StackPanel>

                        <!-- Register Button -->
                        <Button Content="Đăng ký"
                                Background="#0D47A1"
                                Foreground="White"
                                FontWeight="Bold"
                                Height="35"
                                Margin="0,20,0,0"
                                Click="Register_Click" />
                    </StackPanel>
                </Border>

                <!-- Footer -->
                <TextBlock Text="Phiên bản 1.0 - Violation App © 2024" 
                           FontSize="12" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center"
                           Margin="0,30,0,0"/>
            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>
