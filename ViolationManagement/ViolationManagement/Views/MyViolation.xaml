<Window x:Class="ViolationManagement.Views.MyViolation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vi phạm của tôi" Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">

    <Window.Resources>
        <!-- Style cho nút taskbar -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0D47A1    "/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Taskbar -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- 🔴 TASKBAR -->
        <DockPanel Grid.Row="0" Height="50">
            <DockPanel.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#D32F2F" Offset="0"/>
                    <GradientStop Color="#B71C1C" Offset="1"/>
                </LinearGradientBrush>
            </DockPanel.Background>

            <!-- Logo và Tiêu đề -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left"
                        VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="🚨" FontSize="18" Margin="0,0,5,0"/>
                <TextBlock Text="Violation Management"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Các nút -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right"
                       HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button x:Name="btnHome" Content="🏠 Trang chủ" Click="OpenHome"
                        Style="{StaticResource NavButtonStyle}" Margin="5,0"/>
                <Button x:Name="btnLogout" Content="🚪 Đăng xuất" Click="Logout"
                        Style="{StaticResource NavButtonStyle}" Margin="5,0"/>
            </StackPanel>
        </DockPanel>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="1"
                   Text="Các vi phạm đã được xử lý liên quan đến xe của bạn"
                   FontSize="18" FontWeight="Bold"
                   Margin="20,10,20,10"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="20,0,20,10" VerticalAlignment="Center">
            <TextBlock Text="Lọc theo trạng thái: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="cbStatusFilter" Width="200" Margin="0,0,10,0">
                <ComboBoxItem Content="Tất cả" Tag="All" IsSelected="True"/>
                <ComboBoxItem Content="Đã thanh toán" Tag="Paid"/>
                <ComboBoxItem Content="Chưa thanh toán" Tag="Unpaid"/>
            </ComboBox>
            <Button Content="Lọc" Click="FilterByStatus_Click" Padding="10,5"/>
        </StackPanel>

        <!-- Danh sách vi phạm -->
        <DataGrid x:Name="dgViolations" Grid.Row="3" Margin="20,0,20,20"
                  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Biển số xe" Binding="{Binding PlateNumber}" Width="*"/>
                <DataGridTextColumn Header="Vị trí" Binding="{Binding Location}" Width="*"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Ngày xử phạt" Binding="{Binding FineDate, StringFormat=dd/MM/yyyy}" Width="*"/>
                <DataGridTextColumn Header="Tiền phạt" Binding="{Binding FineAmount}" Width="*"/>
                <DataGridTextColumn Header="Trạng thái thanh toán" Binding="{Binding PaidStatusText }" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
