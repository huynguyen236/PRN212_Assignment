<Window x:Class="ViolationManagement.Views.ViewReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="Chi tiết phản ánh"
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Thông tin phản ánh -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Chi tiết phản ánh" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Vertical" Background="White">
                    <TextBlock Text="Loại vi phạm:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding ViolationType}" Margin="0,0,0,10"/>

                    <TextBlock Text="Biển số xe:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PlateNumber}" Margin="0,0,0,10"/>

                    <TextBlock Text="Vị trí:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Location}" Margin="0,0,0,10"/>

                    <TextBlock Text="Trạng thái:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Status}" Margin="0,0,0,10" Foreground="DarkOrange"/>

                    <TextBlock Text="Mô tả:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,10"/>
                </StackPanel>
            </StackPanel>

            <!-- Ảnh & Video -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Hình ảnh -->
                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10" Background="White">
                    <Image x:Name="imgViewer" Stretch="Uniform" Margin="10"/>
                </Border>

                <!-- Video -->
                <StackPanel Grid.Column="1" Margin="10">
                    <Border BorderBrush="Gray" BorderThickness="1" Background="Black">
                        <vlc:VideoView x:Name="vlcPlayer"
                                       Height="240"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       Background="Black"/>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="▶ Phát" Width="80" Margin="5" Click="BtnPlay_Click"/>
                        <Button Content="⏸ Dừng" Width="80" Margin="5" Click="BtnPause_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
