<Window x:Class="ViolationManagement.Views.ManageAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViolationManagement.Views"
        mc:Ignorable="d"
        Title="Quản lý tài khoản" Height="800" Width="1000">
    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                    Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#1E88E5"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Header -->
        <Grid DockPanel.Dock="Top" Height="60">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#D32F2F" Offset="0"/>
                    <GradientStop Color="#B71C1C" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo Section -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <Border Background="White" CornerRadius="20" Width="35" Height="35" Margin="0,0,15,0">
                    <TextBlock Text="👤" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Quản lý tài khoản"
               Foreground="White"
               FontWeight="Bold"
               FontSize="18"/>
                    <TextBlock Text="Trang thông tin tài khoản người dùng"
               Foreground="#FFCDD2"
               FontSize="11"/>
                </StackPanel>
            </StackPanel>



            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal" Grid.Column="2"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <Button x:Name="btnHome" Content="🏠 Trang chủ" Click="OpenHome" Style="{StaticResource NavButtonStyle}" Margin="5,0"/>
                <Button x:Name="btnLogout" Content="🚪 Đăng xuất" Click="Logout" Style="{StaticResource NavButtonStyle}" Margin="5,0"/>
            </StackPanel>
        </Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Thêm tài khoản -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0" HorizontalAlignment="Left">
                <Button Content="Thêm tài khoản" Height="28" Width="100" Background="#1976D2" Foreground="White" Click="Add_Click"/>
                <Button Content="Chỉnh sửa tài khoản" Height="28" Width="130" Background="#1976D2" Foreground="White" Click="EditAccount"/>
            </StackPanel>
            <!-- Tìm kiếm và Lọc -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBox x:Name="txtSearch" Width="200" Height="30"/>
                <ComboBox x:Name="cbRoleFilter" Width="150" Height="30"/>
                <Button Content="Tìm kiếm" Height="30" Width="90" Background="#1976D2" Foreground="White" Click="Search_Click"/>
            </StackPanel>

            <!-- Danh sách tài khoản -->
            <DataGrid x:Name="dgUsers" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="150"/>
                    <DataGridTextColumn Header="CCCD" Binding="{Binding CitizenId}" Width="120"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Vai trò" Binding="{Binding Role}" Width="100"/>
                    <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Phone}" Width="120"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="200"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding Gender}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Phân trang -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="⬅ Trước" Click="PreviousPage_Click" Style="{StaticResource ModernButton}" Background="#E0E0E0"/>
                <TextBlock x:Name="lblPageInfo" VerticalAlignment="Center"/>
                <Button Content="Tiếp ➡" Click="NextPage_Click" Style="{StaticResource ModernButton}" Background="#E0E0E0"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
