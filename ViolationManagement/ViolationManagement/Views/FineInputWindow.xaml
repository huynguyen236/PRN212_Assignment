<Window x:Class="ViolationManagement.Views.FineInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViolationManagement.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="FineInputWindow" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Nhập số tiền phạt:" Margin="0,0,0,10"/>
        <TextBox x:Name="txtFine" Margin="0,0,0,10"/>
        <Button Content="Xác nhận" Click="BtnConfirm_Click"/>
    </StackPanel>
</Window>
