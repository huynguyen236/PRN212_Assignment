<Window x:Class="ViolationManagement.Views.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quên mật khẩu - Violation App"
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Grid Background="#F5F5F5">
        <Border Background="White" CornerRadius="10" Padding="30" Margin="50">
            <StackPanel>
                <TextBlock Text="🔑 Quên mật khẩu" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#0D47A1" 
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Nhập mã CCCD đã đăng ký:" FontWeight="SemiBold" />
                <TextBox x:Name="CCCDTextBox" Height="30" Margin="0,10,0,20"/>

                <Button Content="Gửi mật khẩu mới" 
                        Background="#0D47A1" 
                        Foreground="White" 
                        FontWeight="Bold"
                        Height="35"
                        Click="SendNewPassword_Click"/>

                <TextBlock x:Name="ResultTextBlock" 
                           Text=""
                           Foreground="Red"
                           Margin="0,20,0,0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
