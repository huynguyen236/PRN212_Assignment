<Window x:Class="ViolationManagement.Views.EditAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chỉnh sửa tài khoản" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer>
        <StackPanel Background="#F0F0F0" Margin="20">
            <Border Background="White" CornerRadius="10" Padding="30" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Chỉnh sửa tài khoản"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#0D47A1"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- CCCD - readonly -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Mã căn cước công dân:" FontWeight="SemiBold"/>
                        <TextBox x:Name="CitizenIdTextBox" Height="30" IsReadOnly="True" Background="#E0E0E0"/>
                    </StackPanel>

                    <!-- Họ và tên -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Họ và tên:" FontWeight="SemiBold"/>
                        <TextBox x:Name="FullNameTextBox" Height="30" />
                    </StackPanel>

                    <!-- Role -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Vai trò:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="RoleComboBox" Height="30">
                            <ComboBoxItem Content="Admin"/>
                            <ComboBoxItem Content="Police"/>
                            <ComboBoxItem Content="Citizen"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Giới tính -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Giới tính:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="GenderComboBox" Height="30">
                            <ComboBoxItem Content="Nam"/>
                            <ComboBoxItem Content="Nữ"/>
                            <ComboBoxItem Content="Khác"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Địa chỉ -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Địa chỉ:" FontWeight="SemiBold"/>
                        <TextBox x:Name="AddressTextBox" Height="30"/>
                    </StackPanel>

                    <!-- Số điện thoại -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Số điện thoại:" FontWeight="SemiBold"/>
                        <TextBox x:Name="PhoneTextBox" Height="30"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,10">
                        <TextBlock Text="Email:" FontWeight="SemiBold"/>
                        <TextBox x:Name="EmailTextBox" Height="30"/>
                    </StackPanel>

                    <!-- Nút cập nhật -->
                    <Button Content="Cập nhật"
                            Background="#0D47A1"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="35"
                            Margin="0,20,0,0"
                            Click="Update_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>
