<Window x:Class="ViolationManagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViolationManagement"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="300" Width="300">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Email" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Height="30" TextChanged="txtEmail_TextChanged"/>

            <TextBlock Text="Mật khẩu" Margin="10,10,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="30"/>

            <Button Content="Đăng nhập" Click="Login_Click" Margin="0,20,0,5" Height="30"/>
            <Button Content="Đăng ký" Click="OpenRegister_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
